    "eslint-plugin-import": "^2.29.1",
    "i": "^0.3.7",
    "javascript-obfuscator": "^4.1.0",
    "rollup": "^4.13.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-obfuscator": "^1.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.2.6",
